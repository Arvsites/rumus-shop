# основной сайт — твой Mini App
92-51-22-168.sslip.io {
    encode gzip

    # Проксируем API и health в backend
    @api path /api/* /health
    handle @api {
        reverse_proxy backend:8000
    }

    # Всё остальное — статика (index.html и файлы)
    handle {
        root * /srv/static
        try_files {path} /index.html
        file_server
    }

    # Логи запросов
    log {
        output stdout
        format console
    }
}
